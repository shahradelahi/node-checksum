{
  "name": "@litehex/node-checksum",
  "version": "0.2.1",
  "description": "A simple node.js module to calculate checksum with different algorithms",
  "main": "dist/lib.cjs",
  "module": "dist/lib.js",
  "types": "dist/lib.d.cts",
  "bin": {
    "checksum": "dist/cli.js"
  },
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      }
    }
  },
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "mocha \"**/*.test.ts\"",
    "prepublishOnly": "pnpm test && pnpm format:check && pnpm lint && pnpm build"
  },
  "packageManager": "pnpm@9.15.2",
  "prettier": "@shahrad/prettier-config",
  "devDependencies": {
    "@shahrad/eslint-config": "^1.0.0",
    "@shahrad/prettier-config": "^1.1.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "chai": "^5.1.2",
    "eslint": "^9.17.0",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "crc-32": "^1.2.2",
    "fast-glob": "^3.3.3"
  },
  "keywords": [
    "checksum",
    "hash",
    "md5",
    "sha1",
    "sha256",
    "sha512",
    "node"
  ],
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahradelahi/node-checksum.git"
  },
  "bugs": {
    "url": "https://github.com/shahradelahi/node-checksum/issues"
  },
  "homepage": "https://github.com/shahradelahi/node-checksum#readme",
  "license": "GPL-3.0"
}
