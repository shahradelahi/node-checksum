{
  "name": "@litehex/node-checksum",
  "version": "0.3.0",
  "description": "A simple node.js module to calculate checksum with different algorithms",
  "keywords": [
    "checksum",
    "hash",
    "crc32",
    "md5",
    "sha1",
    "sha256",
    "sha512",
    "node"
  ],
  "homepage": "https://github.com/shahradelahi/node-checksum#readme",
  "bugs": {
    "url": "https://github.com/shahradelahi/node-checksum/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shahradelahi/node-checksum.git"
  },
  "license": "MIT",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      }
    }
  },
  "main": "dist/lib.cjs",
  "module": "dist/lib.js",
  "types": "dist/lib.d.cts",
  "bin": {
    "checksum": "dist/cli.js"
  },
  "files": [
    "dist/**",
    "!**/*.d.cts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "prepublishOnly": "pnpm test && pnpm format:check && pnpm lint && pnpm build",
    "test": "mocha \"**/*.test.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@shahrad/prettier-config",
  "dependencies": {
    "@se-oss/crc32": "^1.0.0",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@shahrad/eslint-config": "^1.0.1",
    "@shahrad/prettier-config": "^1.2.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.4",
    "prettier": "^3.7.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
